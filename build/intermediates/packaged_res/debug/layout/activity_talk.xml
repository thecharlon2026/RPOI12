<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/talk_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_green"
    tools:context=".TalkActivity">

    <!-- State Screen -->
    <LinearLayout
        android:id="@+id/state_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_green"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecting..."
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/button_login"
            android:textColor="@color/white"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

    </LinearLayout>

    <!-- Login screen -->
    <LinearLayout
        android:id="@+id/login_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_green"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- CES Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ces_logo"
            android:layout_marginBottom="24dp"/>

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CES PTT System"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET 'EM THRU"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="40dp"/>

        <!-- Login Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_card_background"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/primary_green"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Network Label -->
            <TextView
                android:id="@+id/network_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Network -->
            <EditText
                android:id="@+id/network"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edit_text_background"
                android:hint="Network URL"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edit_text_background"
                android:hint="Enter username"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edit_text_background"
                android:inputType="textPassword"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Perishable Checkbox -->
            <CheckBox
                android:id="@+id/perishable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="24dp"/>

            <!-- Error Text -->
            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#F44336"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- Login Button -->
            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_login"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Content Screen -->
    <LinearLayout
        android:id="@+id/content_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_green"
        android:orientation="vertical">

        <!-- Contact List -->
        <ListView
            android:id="@+id/contact_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/light_green"
            android:divider="@color/dark_green"
            android:dividerHeight="1dp"/>

        <!-- Talk Screen -->
        <LinearLayout
            android:id="@+id/talk_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_green"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contact Not Selected -->
            <TextView
                android:id="@+id/contact_not_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No contact selected"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"/>

            <!-- Contact Info -->
            <LinearLayout
                android:id="@+id/contact_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Info"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

            <!-- Talk Button -->
            <com.zello.sdk.sample.SquareButton
                android:id="@+id/talk"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_talk_modern"
                android:text="TALK"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Press and hold to talk"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Audio Mode Controls -->
    <LinearLayout
        android:id="@+id/audio_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/black_overlay">

        <ToggleButton
            android:id="@+id/audio_speaker"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Speaker"
            android:textOff="Speaker"
            android:textOn="Speaker"
            android:layout_marginRight="8dp"/>

        <ToggleButton
            android:id="@+id/audio_earpiece"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Earpiece"
            android:textOff="Earpiece"
            android:textOn="Earpiece"
            android:layout_marginRight="8dp"/>

        <ToggleButton
            android:id="@+id/audio_bluetooth"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Bluetooth"
            android:textOff="Bluetooth"
            android:textOn="Bluetooth"/>

    </LinearLayout>

    <!-- Message Info -->
    <LinearLayout
        android:id="@+id/message_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/black_overlay"
        android:visibility="gone">

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/message_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Replay Button -->
    <ImageButton
        android:id="@+id/button_replay"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:background="@drawable/button_login"
        android:src="@android:drawable/ic_media_play"
        android:visibility="gone"/>

    <!-- Connect Button -->
    <ToggleButton
        android:id="@+id/button_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="16dp"
        android:text="Connect"
        android:textOff="Connect"
        android:textOn="Disconnect"
        android:visibility="gone"/>

</FrameLayout>
